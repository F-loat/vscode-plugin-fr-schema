{
  "name": "vscode-plugin-fr-schema",
  "displayName": "FormRender generator",
  "description": "form-render 的表单设计器",
  "version": "0.2.0",
  "publisher": "F-loat",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:frSchema.p2s",
    "onCommand:frSchema.gen",
    "onCommand:frSchema.edit",
    "onCustomEditor:frSchema.editor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/F-loat/vscode-plugin-fr-schema.git"
  },
  "icon": "media/icon.png",
  "main": "./out/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "frSchema.gen",
        "title": "%frSchema.gen.title%"
      },
      {
        "command": "frSchema.p2s",
        "title": "%frSchema.p2s.title%"
      },
      {
        "command": "frSchema.edit",
        "title": "%frSchema.edit.title%",
        "icon": {
          "light": "./media/edit-light.svg",
          "dark": "./media/edit-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == json",
          "command": "frSchema.edit",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == json",
          "command": "frSchema.edit",
          "group": "1_formrender"
        },
        {
          "when": "resourceLangId == json",
          "command": "frSchema.gen",
          "group": "1_formrender"
        },
        {
          "when": "resourceLangId == javascriptreact",
          "command": "frSchema.p2s",
          "group": "1_formrender"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == json",
          "command": "frSchema.edit",
          "group": "1_formrender"
        },
        {
          "when": "resourceLangId == json",
          "command": "frSchema.gen",
          "group": "1_formrender"
        },
        {
          "when": "resourceLangId == javascriptreact",
          "command": "frSchema.p2s",
          "group": "1_formrender"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "frSchema.editor",
        "displayName": "FormRender Schema Editor",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ],
        "priority": "option"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "*.fr.json",
          "*.schema.json",
          "schema/*.json",
          "schemas/*.json"
        ],
        "url": "./src/validation/schema.json"
      }
    ]
  },
  "scripts": {
    "dev": "umi dev",
    "build": "umi build",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "lint": "eslint . --ext .jsx,.ts,.tsx --fix",
    "vscode:prepublish": "npm run lint && npm run compile && npm run build"
  },
  "dependencies": {
    "fr-generator": "^1.0.0-beta.1",
    "proptypes-to-json-schema": "^0.1.1",
    "react": "^16.8.6",
    "react-docgen": "^5.3.0",
    "react-dom": "^16.8.6",
    "umi": "^3.2.22"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^4.1.2",
    "ts-loader": "^8.0.4",
    "typescript": "^3.9.4",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
