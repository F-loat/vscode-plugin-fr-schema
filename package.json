{
  "name": "vscode-plugin-fr-schema",
  "displayName": "FormRender generator",
  "description": "form-render 的表单设计器",
  "version": "0.1.4",
  "publisher": "F-loat",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:frSchema.p2s",
    "onCommand:frSchema.gen",
    "onCommand:frSchema.edit",
    "onCustomEditor:frSchema.editor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/F-loat/vscode-plugin-fr-schema.git"
  },
  "icon": "media/icon.png",
  "main": "./out/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "frSchema.gen",
        "title": "Generate formRender schema from data"
      },
      {
        "command": "frSchema.p2s",
        "title": "Generate formRender schema from React PropTypes"
      },
      {
        "command": "frSchema.edit",
        "title": "Open with formRender schema editor",
        "icon": {
          "light": "./media/edit-light.svg",
          "dark": "./media/edit-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == json",
          "command": "frSchema.edit",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "frSchema.editor",
        "displayName": "FormRender Schema Editor",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ],
        "priority": "option"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "*.fr.json",
          "*.schema.json",
          "schema/*.json",
          "schemas/*.json"
        ],
        "url": "./src/validation/schema.json"
      }
    ]
  },
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "compile": "tsc -p ./src/extension",
    "watch": "tsc -w -p ./src/extension",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "vscode:prepublish": "npm run lint && npm run build"
  },
  "dependencies": {
    "ahooks": "^2.6.0",
    "antd": "^4.6.4",
    "fr-generator": "0.5.1",
    "proptypes-to-json-schema": "^0.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^12.12.0",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "typescript": "^3.9.4",
    "umi": "^2.9.0",
    "umi-plugin-react": "^1.8.0",
    "umi-types": "^0.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
